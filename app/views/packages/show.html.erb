<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @package.name %>
</p>

<% if @package.images.attached? %>
	<% @package.images.each do |img| %>
		<%= image_tag img %>
	<% end %>
  <% else %>
  <%= img src="https://picsum.photos/id/#{rand(1..300)}/200/300/" %>
<% end %>

<p>
  <strong>Price:</strong>
  <%= @package.price %>
</p>

<p>
  <strong>Hours:</strong>
  <%= @package.hours %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @package.notes %>
</p>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
